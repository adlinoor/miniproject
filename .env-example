# === DATABASE ===
DATABASE_URL=""               # e.g. postgres://user:password@localhost:5432/mydb
DIRECT_URL=""                 # Optional: direct URL for Prisma CLI

# === SERVER CONFIG ===
PORT=8080                     # Default port
SECRET_KEY=""                # JWT secret for auth token

# === CLOUDINARY ===
CLOUDINARY_NAME=             # Cloudinary cloud name
CLOUDINARY_KEY=              # API key
CLOUDINARY_SECRET=           # API secret

# === EMAIL / SMTP ===
NODEMAILER_USER=""           # Email username (e.g. Gmail)
NODEMAILER_PASS=""           # App password (not your real email password)
SMTP_HOST=smtp.gmail.com     # Example: Gmail SMTP
SMTP_PORT=587                # Port (587 = TLS, 465 = SSL)
SMTP_FROM=no-reply@example.com  # Displayed sender name/email in inbox

# === FRONTEND ===
FRONTEND_URL=http://localhost:3000  # Used in welcome email or activation link
